<root>
	<scripts>
		<include src="file://{resources}/scripts/custom_game/unit_spawner.js" />
	</scripts>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="file://{resources}/styles/custom_game/unit_spawner.css" />
	</styles>
	<snippets>
		<snippet name="ButtonBar_UnitSpawner">
			<Button class="ButtonBar_UnitSpawner" />
		</snippet>
		<snippet name="WindowButton">
            <Panel id="WindowButton" hittest="false">
            </Panel>
		</snippet>
		<snippet name="WindowPanel">
            <Panel id="WindowPanel" hittest="false">
            </Panel>
		</snippet>
		<snippet name="Row">
            <Panel id="Row" class="Row" hittest="false">
            </Panel>
		</snippet>
		<snippet name="UnitChoise">
            <Button id="UnitChoise">
				<DOTAHeroImage id="UnitImage" heroimagestyle="landscape"/>
            </Button>
		</snippet>
    </snippets>
	<Panel class="UnitSpawnerRoot">
		<Panel id="WindowRoot" class="hidden">
			<Panel id="SearchBox"><TextEntry id="SearchBoxInput" maxchars="100" placeholder="Search" oninputsubmit="OnSubmitSearch()" /></Panel>
			<Panel id="UnitSpawnerRoot">
			</Panel>
		</Panel>
    </Panel>
</root>
